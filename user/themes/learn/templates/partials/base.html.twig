<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title }} | {% endif %}{{ site.title }}</title>
    {% if header.description %}
        <meta name="description" content="{{ header.description }}">
    {% else %}
        <meta name="description" content="{{ site.description }}">
    {% endif %}
    {% if header.robots %}
        <meta name="robots" content="{{ header.robots }}">
    {% endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="alternate" type="application/atom+xml" href="{{ base_url_absolute}}/feed:atom" title="Atom Feed" />
    <link rel="alternate" type="application/rss+xml" href="{{ base_url_absolute}}/feed:rss" title="RSS Feed" />
    <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon.png">
    <link rel="stylesheet" href="{{ theme_url }}/css-compiled/nucleus.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/css-compiled/template.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/css/highlight/learn.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/css/featherlight.min.css" type="text/css" />
    <!--[if (gte IE 8)&(lte IE 9)]>
        <script type="text/javascript" src="{{ theme_url }}/js/html5shiv-printshiv.min.js"></script>
        <link rel="stylesheet" href="{{ theme_url }}/css/nucleus-ie9.css" type="text/css" />
        <link rel="stylesheet" href="{{ theme_url }}/css/pure-0.5.0/grids-min.css" type="text/css" />
    <![endif]-->
    {% for stylesheet in stylesheets %}
        <link rel="stylesheet" href="{{ base_url_relative }}/{{ stylesheet }}" type="text/css" />
    {% endfor %}
    <script src="{{ theme_url }}/js/jquery-2.1.1.min.js"></script>
    <script src="{{ theme_url }}/js/featherlight.min.js"></script>
    <script src="{{ theme_url }}/js/highlight.pack.js"></script>
    <script src="{{ theme_url }}/js/learn.js"></script>
    <script src="{{ theme_url }}/js/modernizr.custom.71422.js"></script>
    <script>
    $(function () {
        hljs.initHighlightingOnLoad();
        $('a[rel="lightbox"]').featherlight();
    });
    </script>
    {% endblock %}
</head>
<body class="searchbox-hidden" data-url="{{ page.route }}">
    {% block header %}
    <header id="header" class="navbar">
        <ul>
            <li><a href="#" data-sidebar-toggle><i class="icon-list"></i></a></li>
            <li><a href="#" data-search-toggle><i class="icon-search"></i></a></li>
            <li><a href="#" data-bookmark-toggle><i class="icon-star"></i></a></li>
            <li><a href="#" data-font-toggle><i class="font-toggle">Aa</i></a></li>
        </ul>
        <h4>
            Learn Grav
        </h4>

        {% if progress %}
            {% set progress_value = progress.currentPosition(page.path) %}
            {% set progress_max = progress.count() %}
        {% else %}
            {% set progress_value = 0 %}
            {% set progress_max = 1 %}
        {% endif %}

        <div id="progress-wrapper">
            <div id="progress" data-progress-value="{{ progress_value +1 }}" data-progress-max="{{ progress_max }}">
                <span class="progress-bar" style="width:{{ progress_value / progress_max * 100 }}%"></span>
            </div>
        </div>


    </header>
    {% endblock %}

    {% block sidebar %}
    <section id="sidebar">
        <div class="searchbox">
            <input type="text" placeholder="Search Documentation" data-search-input="{{ base_url_relative }}/search.json/query" />
            <span data-search-clear>&times;</span>
        </div>
        <div class="padding">
        {% include 'partials/sidebar.html.twig' %}
        </div>
    </section>
    {% endblock %}

    {% block body %}

    <section id="body">

        <div class="padding">
            {% block content %}{% endblock %}
            {% block pagination %}{% endblock %}
            {% block footer %}{% endblock %}

        </div>
        {% block navigation %}{% endblock %}
    </section>
    {% endblock %}
 </body>
</html>
